<div class="container">
  <hr>
    <div class="row">
        <div class="col-md-offset-3 col-md-2">
          <div class="btn-group btn-group-justified">
            <a href="/rock" class="btn btn-block btn-primary">Play Rock</a>
          </div>
        </div>
        <div class="col-md-2">
          <div class="btn-group btn-group-justified">
            <a href="/paper" class="btn btn-block btn-info">Play Paper</a>
          </div>
        </div>
        <div class="col-md-2">
          <div class="btn-group btn-group-justified">
            <a href="/scissors" class="btn btn-block btn-primary">Play Scissors</a>
          </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-offset-2 col-md-4">
          <div class="panel panel-success">
            <div class="panel-heading">
          <h2 class="panel-title text-center">You played <%= @user_move %>.</h2>
          </div>
          <div class="panel-body">
          <img class="img-responsive" src="/assets/images/rock.png">
          </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="panel panel-danger">
            <div class="panel-heading">
          <h2 class="panel-title text-center">I played <%= @computer_move %>.</h2>
          </div>
          <div class="panel-body">
          <%= image_tag ("#{@computer_move}.png") %>
          </div>
          </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-2 col-md-8 well text-center">
          <h1>
            <span class="label label-warning">
              You <%= @result %>
            </span>
          </h1>
        </div>
    </div>
</div>
