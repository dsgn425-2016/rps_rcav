<div class="container">
  <hr>
  <div class="row play_btn">
    <div class="col-md-offset-2 col-md-8">
      <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <a href="/rock" class="btn btn-block btn-primary">Play Rock</a>
        <a href="/paper" class="btn btn-block btn-info">Play Paper</a>
        <a href="/scissors" class="btn btn-block btn-primary">Play Scissors</a>
      </div>
    </div>
  </div>
  <hr>
  <div class="row output_image">
    <div class="col-md-offset-2 col-md-4">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="panel-title text-center"> <%= @computer_move.capitalize %> </h3>
        </div>
        <div class="panel-body">
          <img src="/assets/images/<%= @computer_move%>.png" class="img-responsive">
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title text-center"> <%= @user_move.capitalize%> </h3>
        </div>
        <div class="panel-body">
          <img src="/assets/images/<%= @user_move%>.png" class="img-responsive">
        </div>
      </div>
    </div>
  </div>
  <div class="row result_btn">
    <div class="col-md-12">
      <div class="well text-center">
        <h1>
          <span class="label label-success label-<%=@result_color[@result]%>"> You <%= @result %>! </span>
        </h1>
      </div>
    </div>
  </div>
</div>




</body>
