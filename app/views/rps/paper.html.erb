<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
<div class="container">
  <hr>
  <div class="row"> <!-- Heading buttons-->
    <div class="col-md-offset-2 col-md-8"> <!--Buttons-->
      <div class="btn-group btn-group-justified">
        <a href="/rock" class="btn btn-block btn-primary"> <!--Rock button-->
          Play Rock
        </a>
        <a href="/paper" class="btn btn-block btn-info"> <!-- Paper button-->
          Play Paper
        </a>
        <a href="/scissors" class="btn btn-block btn-primary"> <!--Scissots Button-->
          Play Scissors
        </a>
      </div>
    </div>
  </div>
  <hr>
  <div class="row"> <!--Hero Images-->
    <div class="col-md-offset-2 col-md-4"> <!--UserImage-->
      <div class="panel panel-success">
        <div class="panel-heading">
          <h2 class="panel-title text-center">
            Paper
          </h2>
        </div>
        <div class="panel-body">
          <img class="img-responsive" src="/assets/images/paper.png">
        </div>
      </div>
    </div>
    <div class="col-md-4 col-xs-6"> <!-- Computer Image-->
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title text-center">
            <%=@computer_move%>
          </h2>
        </div>
        <div class="panel-body">
          <img class="img-responsive" src="/assets/images/<%= @computer_move %>.png">
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="well text-center">
        <h1>
          <span class="label <%=@label%>"> <!-- Label-->
            You <%= @result %>!
          </span>
        </h1>
      </div>
    </div>
  </div>
</div>
