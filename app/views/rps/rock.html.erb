
 <div class="container">
   <hr>

 <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="btn-group btn-group-justified">
         <a href="/rock" class="btn btn-block btn-primary">Play Rock </a>
         <a href="/paper" class="btn btn-block btn-info">Play Paper</a>
         <a href="/scissors" class="btn btn-block btn-primary">Play Scissors</a>
       </div>
     </div>
   </div>
   <hr>
   <div class="row">
     <div class="col-md-offset-2 col-md-4">
       <div class="panel panel-success">
         <div class="panel-heading">
           <h3 class="panel-title text-center"><%= @user %></h3>
         </div>
         <div class="panel-body">
           <img class="img-responsive" src=<%= @user_img %> >
         </div>
       </div>
     </div>
     <div class="col-md-4">
       <div class="panel panel-danger">
         <div class="panel-heading">
           <h3 class="panel-title text-center"><%= @computer %></h3>
        </div>
         <div class="panel-body">
           <img class="img-responsive" src=<%= @comp_img %>>
         </div>
       </div>
     </div>
   </div>
   <div class="row">
     <div class="col-md-12">
       <div class="well text-center">
       <h1> <span class="label <%= @outcome_css%>"><%= @outcome %></span></h1>
     </div>
   </div>
 </div>
