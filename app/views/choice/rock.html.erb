<body>
  <div class="container">
    <hr>
      <div class="row button_choice_row">
          <div class="col-sm-offset-2 col-sm-8">
            <div class="btn-group btn-group-justified">
              <a href="http://localhost:3000/rock" class="btn btn-block btn-primary"> Play Rock</a>

              <a href="http://localhost:3000/paper" class="btn btn-block btn-info"> Play Paper</a>

                <a href="http://localhost:3000/scissors" class="btn btn-block btn-primary"> Play Scissors</a>


            </div>

          </div>

      </div>
      <hr>
      <div class="row image_row">
            <div class="col-md-offset-2 col-md-4 col-xs-6">
            <div class="panel panel-success">
              <div class="panel-heading panel-title text-center">
                <%=@user_move.capitalize%>

              </div>
              <div class="panel-body">
                <img class="img-responsive" src="\assets\images\<%=@user_move%>.png">

              </div>

            </div>
          </div>
          <div class="col-md-offset-0 col-md-4 col-xs-6">
              <div class="panel panel-danger">
                <div class="panel-heading panel-title text-center">
                  <%=@computer_move.capitalize%>

                </div>
                <div class="panel-body">
                  <img class="img-responsive" src="\assets\images\<%=@computer_move%>.png">

                </div>

              </div>

          </div>
      </div>
      <div class="row result_row">  <!-- Result row returns @result and @result_format-->

          <div class="col-md-12">
            <div class="well text-center">
              <h1>
                <span class="label <%=@result_format%>">
                  <%=@result%>
                </span>

              </h1>

            </div>



          </div>
      </div>
  </div>

</body>
