<!DOCTYPE html>
<html>
<head>
  <title>RockPaperScissors</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <!-- Connect to Bootstrap CSS -->
  <link rel="stylesheet" href="assets/css/bootstrap.css">

  <!-- Connect to our own additional CSS -->
  <link rel="stylesheet" href="public/assets/css/additional_styles.css">

</head>


<body>
  <div class="container">
    <hr>
    <div class="row">
      <div class="col-md-offset-2 col-md-8">
        <div class="btn-group btn-group-justified">
          <a href="/rock" class="btn btn-block btn-primary">
            Play Rock
          </a>
          <a href="/paper" class="btn btn-block btn-info">
            Play Paper
          </a>
          <a href="/scissors" class="btn btn-block btn-primary">
            Play Scissors
          </a>
        </div>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-offset-2 col-md-4 col-xs-6">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h2 class="panel-title text-center">
              <%= @user_move.capitalize %>
            </h2>
          </div>
          <div class="panel-body">
            <img src="assets/images/<%=@user_move%>.png" class="img-responsive" />
          </div>
        </div>
      </div>
      <div class="col-md-4 col-xs-6">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h2 class="panel-title text-center">
              <%= @computer_move.capitalize %>
            </h2>
          </div>
          <div class="panel-body">
            <img src="assets/images/<%=@computer_move%>.png" class="img-responsive" />
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= yield %>

</body>
</html>
